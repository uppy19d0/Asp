@model ITLASchool.Models.Estudiantes

@{
    ViewData["Title"] = "Create";
}

<script src="https://kit.fontawesome.com/3c52229e0a.js" crossorigin="anonymous"></script>

<br />
<br />

<div class="card">
    <h3 class="card-header font-weight-bold text-uppercase py-4  text-center">
            Ingrese los datos del estudiante
    </h3>

</div>
<br />

<form asp-action="CrearEs" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Matricula" class="control-label"></label>
            <input asp-for="Matricula" class="form-control" />
            <span asp-validation-for="Matricula" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Apellido" class="control-label"></label>
            <input asp-for="Apellido" class="form-control" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
    </div>

    <a type="button" class="btn btn-success" asp-action="MenuEs">Volver atras </a> |
    <input type="submit" value="Crear" class="btn btn-primary" />
</form>

<div>

</div>
