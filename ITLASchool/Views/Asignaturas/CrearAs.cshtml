@model ITLASchool.Models.Asignaturas

@{
    ViewData["Title"] = "Crear Asignatura";
}

<script src="https://kit.fontawesome.com/3c52229e0a.js" crossorigin="anonymous"></script>

<br />
<br />

<div class="card">
    <h3 class="card-header font-weight-bold text-uppercase py-4  text-center">
        Ingrese los datos de la asignatura
    </h3>

</div>
<br />
<form asp-action="CrearAs">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="TipoDeAsignatura" class="control-label"></label>
            <input asp-for="TipoDeAsignatura" class="form-control" />
            <span asp-validation-for="TipoDeAsignatura" class="text-danger"></span>
        </div>
    </div>
    <a type="button" class="btn btn-success" asp-action="MenuAs">Volver atras </a> |
    <input type="submit" value="Crear" class="btn btn-primary" />
</form>

<div>

</div>


