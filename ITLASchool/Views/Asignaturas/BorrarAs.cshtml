@model ITLASchool.Models.Asignaturas

@{
    ViewData["Title"] = "Borrar";
}

<br />
<h3>¿Esta seguro de eliminar esta asignatura    ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDeAsignatura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoDeAsignatura)
        </dd>
    </dl>

    <form asp-action="BorrarAs">
        <input type="hidden" asp-for="AsignaturasID" />
        <a type="button" class="btn btn-success" asp-action="MenuAs">Cancelar</a> |
        <input type="submit" value="Eliminar" class="btn btn-danger" />

    </form>
</div>
